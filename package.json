{
	"name": "sapper-typescript-graphql-tailwindcss-template",
	"description": "A template that includes Svelte with Sapper, TypeScript preprocessing, TailwindCSS, and a GraphQL server through TypeGraphQL",
	"keywords": [
		"sapper",
		"typegraphql",
		"typescript",
		"tailwindcss",
		"postcss",
		"eslint",
		"svelte",
		"apollo-server",
		"graphql"
	],
	"homepage": "https://github.com/mscofield0/sapper-typescript-graphql-tailwindcss-template",
	"repository": {
		"type": "git",
		"url": "https://github.com/mscofield0/sapper-typescript-graphql-tailwindcss-template.git"
	},
	"license": "MIT",
	"version": "2020.11.28",
	"scripts": {
		"eslint": "eslint",
		"eslint:fix": "eslint --fix ./*.js ./src/*.ts ./src/components/**/*.svelte ./src/graphql/**/*.ts ./src/routes/**/*.svelte ./src/routes/**/*.ts",
		"validate": "svelte-check --ignore src/node_modules/@sapper",
		"validate:dev": "svelte-check --ignore src/node_modules/@sapper --watch",
		"sapper:dev": "sapper dev",
		"sapper:build": "cross-env NODE_ENV=production sapper build --legacy",
		"sapper:export": "cross-env NODE_ENV=production sapper export --legacy",
		"dev": "run-p validate:dev sapper:dev",
		"prod": "run-s sapper:build validate",
		"start": "node __sapper__/build",
		"export": "run-s sapper:export validate"
	},
	"dependencies": {
		"compression": "^1.7.4",
		"express": "^4.17.1",
		"node-fetch": "^2.6.1",
		"sirv": "^1.0.7",
		"tailwindcss": "^2.0.1"
	},
	"devDependencies": {
		"@babel/core": "^7.12.9",
		"@babel/plugin-syntax-dynamic-import": "^7.8.3",
		"@babel/plugin-transform-runtime": "^7.12.1",
		"@babel/preset-env": "^7.12.7",
		"@babel/runtime": "^7.12.5",
		"@rollup/plugin-babel": "^5.2.1",
		"@rollup/plugin-commonjs": "^16.0.0",
		"@rollup/plugin-json": "^4.1.0",
		"@rollup/plugin-node-resolve": "^10.0.0",
		"@rollup/plugin-replace": "^2.3.4",
		"@rollup/plugin-typescript": "^6.1.0",
		"@types/compression": "^1.7.0",
		"@types/express": "^4.17.9",
		"@types/node-fetch": "^2.5.7",
		"@typescript-eslint/eslint-plugin": "^4.8.2",
		"@typescript-eslint/parser": "^4.8.2",
		"cross-env": "^7.0.2",
		"eslint": "^7.14.0",
		"eslint-config-airbnb-base": "^14.2.1",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-svelte3": "^2.7.3",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.1.10",
		"postcss-load-config": "^3.0.0",
		"reflect-metadata": "^0.1.13",
		"rollup": "^2.33.3",
		"rollup-plugin-svelte": "6.1.1",
		"rollup-plugin-terser": "^7.0.2",
		"sapper": "^0.28.10",
		"svelte": "^3.29.7",
		"svelte-check": "^1.1.17",
		"svelte-preprocess": "^4.6.1",
		"tslib": "^2.0.3",
		"typescript": "^4.1.2",
		"utf-8-validate": "^5.0.3"
	}
}
